<Window x:Class="DemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Demo Application - WPF .NET 8" 
        Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Application de Démonstration" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Exemple pour déploiement InnoSetup" 
                       FontSize="14" 
                       Foreground="#7F8C8D"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Zone de saisie -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Entrez votre nom:" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="NomTextBox" 
                     Padding="8"
                     FontSize="14"
                     BorderBrush="#BDC3C7"
                     BorderThickness="1"/>
        </StackPanel>

        <!-- Bouton d'action -->
        <Button Grid.Row="2" 
                x:Name="SaluerButton"
                Content="Saluer"
                Click="SaluerButton_Click"
                Height="40"
                FontSize="14"
                FontWeight="SemiBold"
                Background="#3498DB"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"
                Margin="0,0,0,15">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#3498DB"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="5"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2980B9"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Zone de résultat -->
        <Border Grid.Row="3" 
                Background="White"
                BorderBrush="#BDC3C7"
                BorderThickness="1"
                CornerRadius="5"
                Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="ResultatTextBlock" 
                          TextWrapping="Wrap"
                          FontSize="13"
                          LineHeight="22"/>
            </ScrollViewer>
        </Border>

        <!-- Pied de page -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,15,0,0">
            <TextBlock Text="Version: 1.0.0" 
                       FontSize="11"
                       Foreground="#95A5A6"
                       Margin="0,0,15,0"/>
            <TextBlock Text="•" 
                       FontSize="11"
                       Foreground="#95A5A6"
                       Margin="0,0,15,0"/>
            <TextBlock Text=".NET 8.0" 
                       FontSize="11"
                       Foreground="#95A5A6"/>
        </StackPanel>
    </Grid>
</Window>
